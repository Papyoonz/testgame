<!DOCTYPE html>
<html>
<head>
    <title>PenaltÄ± Atma Oyunu</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #2c3e50;
        }
        #game {
            position: relative;
            width: 300px;
            height: 500px;
            background-color: #ecf0f1;
            border: 2px solid #34495e;
            border-radius: 10px;
            overflow: hidden;
        }
        #goal {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 50px;
            background-color: #27ae60;
            border-bottom: 5px solid #2c3e50;
            text-align: center;
            font-size: 24px;
            line-height: 50px;
            color: #fff;
        }
        #ball {
            position: absolute;
            bottom: 20px;
            left: calc(50% - 20px);
            width: 40px;
            height: 40px;
            background-color: #e74c3c;
            border-radius: 50%;
            cursor: pointer;
        }
        #message {
            position: absolute;
            bottom: 10px;
            width: 100%;
            text-align: center;
            font-size: 18px;
            color: #34495e;
        }
    </style>
</head>
<body>
    <div id="game">
        <div id="goal">Goal</div>
        <div id="ball"></div>
        <div id="message">Click the ball to shoot!</div>
    </div>

    <script>
        const ball = document.getElementById('ball');
        const message = document.getElementById('message');
        let isShooting = false;

        ball.addEventListener('click', () => {
            if (isShooting) return;
            isShooting = true;
            message.textContent = 'Shooting...';

            const shotDistance = Math.random() * (game.clientHeight - ball.clientHeight - goal.clientHeight) + goal.clientHeight;
            ball.style.transition = 'bottom 0.5s ease-in';
            ball.style.bottom = `${shotDistance}px`;

            setTimeout(() => {
                if (shotDistance <= goal.clientHeight) {
                    message.textContent = 'Goal! Click the ball to shoot again.';
                } else {
                    message.textContent = 'Missed! Click the ball to try again.';
                }
                ball.style.transition = 'none';
                ball.style.bottom = '20px';
                isShooting = false;
            }, 500);
        });
    </script>
</body>
</html>
